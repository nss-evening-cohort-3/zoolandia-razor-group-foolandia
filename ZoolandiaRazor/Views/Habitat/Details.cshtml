@{
    ViewBag.Title = "Specific Habitat";
}

<div class="jumbotron">
    <h1>Foolandia</h1>
    <p class="lead">Foolandia, A Very Special Place To Visit!</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Specific Habitat</h3>
       
        @if (@ViewBag.ValidHabitat == true) 
            {
                <ul class="list-group">
                    <li class="list-group-item">Name: @ViewBag.SpecificHabitat.Name</li>
                    <li class="list-group-item">Habitat Type: @ViewBag.SpecificHabitat.HabitatType </li>
                </ul>
                    
                <h3> Current Animals: </h3>
                    foreach (var Animal in ViewBag.SpecificHabitat.CurrentAnimals)
                    {
                        <p>@Animal</p>
                    }

                <h3> Current Employees: </h3>
                    foreach (var Employee in ViewBag.SpecificHabitat.CurrentAssignedEmployees)
                    {
                        <p>@Employee</p>
                    }
            } 
            else 
            {
                <h2>Invalid Habitat</h2>
            }
    </div>
</div>
