@{
    ViewBag.Title = "All Habitats";
}

<div class="jumbotron">
    <h1>Foolandia</h1>
    <p class="lead">Foolandia, A Very Special Place To Visit!</p>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>All Habitats</h3>
       
        <ul class="list-group">
            @{foreach (var Habitat in ViewBag.Habitats)
                {
                    <li class="list-group-item">Habitat Name: <a href="/Habitat/Details/@Habitat.HabitatId">@Habitat.Name </a></li>

                }
            }
            <li class="list-group-item">Number of Habitats: @ViewBag.HabitatCount</li>
        </ul>
    </div>
</div>
