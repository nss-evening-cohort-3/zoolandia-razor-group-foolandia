@{
    ViewBag.Title = "Specific Employee";
}

<div class="jumbotron">
    <h1>Foolandia</h1>
    <p class="lead">Foolandia, A Very Special Place To Visit!</p>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Specific Employee</h3>
       
        @if (@ViewBag.ValidEmployee == true) 
            {
                <ul class="list-group">
                    <li class="list-group-item">Name: @ViewBag.SpecificEmployee.Name</li>
                    <li class="list-group-item">Age: @ViewBag.SpecificEmployee.Age </li>
                </ul>
                    
                <h3> Current Assigned Habitats: </h3>
                    foreach (var Habitat in ViewBag.SpecificEmployee.CurrentAssignedHabitats)
                    {
                        <p>@Habitat</p>
                    }
                    <p><a href="../Index" class="btn btn-primary btn-lg">Full Employee List</a></p>
        }
        else
        {
                <h2>Invalid Employee</h2>
            }
    </div>
</div>
