@{
    ViewBag.Title = "Specific Animal";
}

<div class="jumbotron">
    <h1>Foolandia</h1>
    <p class="lead">Foolandia, A Very Special Place To Visit!</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Specific Animal</h3>
       
        @{if (@ViewBag.ValidAnimal == true) 
            {
                <ul class="list-group">
                    <li class="list-group-item">Name: @ViewBag.SpecificAnimal.Name</li>
                    <li class="list-group-item">Common Name: @ViewBag.SpecificAnimal.CommonName</li>
                    <li class="list-group-item">Scientific Name: @ViewBag.SpecificAnimal.ScientificName</li>
                    <li class="list-group-item">Current Habitat: @ViewBag.SpecificAnimal.CurrentHabitat</li>
                    <li class="list-group-item">Animal's Age: @ViewBag.SpecificAnimal.Age</li>
                </ul>
            } 
            else 
            {
                <h2>Invalid Animal</h2>
            }
        }
    </div>
</div>
